pipeline {
    agent any

       stages {
            stage('SCM checkout') {
                  steps {
                        git url: 'https://github.com/Nouman72884/flask-examples.git'
                        }
             }
             stage('preparation') {
                   steps {
                         sh 'sudo apt-get install python-pip -y'
                         }
              }
              stage('preparation 2') {
                    steps {
                          sh 'pip install -r requirements.txt'
                          }
               }
               stage('SSH transfer') {
                    steps {
                        sshPublisher(
                            continueOnError: false, failOnError: true,
                            publishers: [
                                sshPublisherDesc(
                                    configName: "webserver",
                                    verbose: true,
                                    useWorkspaceInPromotion: true,
                                    transfers: [
                                        sshTransfer(sourceFiles: "/root/.cache/pip/wheels/f2/c8/8f/df2bd0e6006137de78d2cc9b1a847cbf5ecdcd59cbc519363d/pymongo-2.7-cp27-cp27mu-linux_x86_64.whl")
                        ]
                    )
                ]
            )
        }
    }


              stage('transfer artifacts') {
                    steps {
                          sshPublisher(publishers: [sshPublisherDesc(configName: 'webserver', transfers: [sshTransfer(excludes: '', execCommand: '', execTimeout: 3000000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/tmp', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: true)])
                          }
              }
       }
}
