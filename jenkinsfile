pipeline {
    agent any

       stages {
            stage('SCM checkout') {
                  steps {
                        git url: 'https://github.com/Nouman72884/flask-examples.git'
                        }
             }
             stage('preparation') {
                   steps {
                         sh 'sudo apt-get install python-pip -y'
                         sh 'pip install wheel'
                         }
              }
              stage('preparation 2') {
                    steps {
                          sh 'pip install --user --install-option="--prefix=" -r requirements.txt'
                                                  }
               }
              stage('transfer artifacts') {
                    steps {
                          sshPublisher(publishers: [sshPublisherDesc(configName: 'webserver', transfers: [sshTransfer(excludes: '', execCommand: 'sudo apt-get install python -y', execTimeout: 3000000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/tmp', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: true)])
                          }
              }
       }
}
